{% extends 'base.html.twig' %}

{% block title %}Hello SallesTravailController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div>
  <h1>Salles de travail</h1>
  <h3>La reservation des salles s'effectue du lundi au vendredi de 8h à 19h </h3>
  <h4>Chaque reservation sera de 1h minimun et de 4h maximun</h4>
</div>

{% for salleTravail in salles_travails %}

<div class="card" style="width: 18rem;">
    <img src="{{ vich_uploader_asset(salleTravail, 'imageFile') }}" class="card-img-top" alt="{{ salleTravail.nom }}">

<div class="card-body">
  <h5 class="card-title">{{salleTravail.nom}}</h5>
  <p class="card-text">{{salleTravail.description}}</p>
</div>

  <ul class="list-group list-group-flush">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      Capacité d'accueil : {{salleTravail.capacite}} 
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      Wi-Fi <img src="/images/icon/check-rouge.png" style="width: 20px" alt="">
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      Projecteur <img src="/images/icon/check-vert.png" style="width: 20px" alt="">
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      Tableau <img src="/images/icon/check-vert.png" style="width: 20px" alt="">
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      Prise électriques <img src="/images/icon/check-rouge.png" style="width: 20px" alt="">
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center ">
      Télévision <img src="/images/icon/check-rouge.png" style="width: 20px" alt="">
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      Salle climatisé <img src="/images/icon/check-vert.png" style="width: 20px" alt="">
    </li>
  </ul>
  <div class="card-body">
    <a href="#" class="card-link">Reservez un créneau</a>

  </div>
</div>


{% endfor %}
{% endblock %}
