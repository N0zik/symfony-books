{# templates/bibliotheque/commentaireEmprunt.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Ajouter un Commentaire sur un Emprunt{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2>Ajouter un Commentaire sur un Emprunt</h2>
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.commentaire, 'Votre Commentaire', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.commentaire, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.commentaire) }}
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Soumettre</button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
