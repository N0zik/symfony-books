{% extends 'base.html.twig' %}

{% block title %}Symfony Book{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center mb-5">Bibliothèque</h1>
    <nav>
        <ul>
            {% include "components/_search.html.twig" with { form:form ?? null } only %}
        </ul>
    </nav>
    <div class="container">
        {# Bouton pour afficher les livres non restitués #}
        <a href="{{ path('app_en_retard') }}" class="btn btn-primary">Livres non restitués</a>
        {# modal #}
        {% for livre in livres %}

            <div class="modal fade" id="staticBackdrop{{ livre.id }}" data-bs-backdrop="static" data-bs-keyboard="false"
                 tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header ">
                            <h5 class="modal-title" id="staticBackdropLabel">{{ livre.nom }}</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body ">
                            <divb class="d-flex justify-content-center">
                                <img src="{{ vich_uploader_asset(livre, 'imageFile') }}" alt="{{ livre.nom }}"
                                     style="height:450px; object-fit: cover">
                            </divb>

                            <h5 class="mt-5 mb-5">Résumer :</h5>
                            <p>{{ livre.resume }}</p>
                            <p><b>Année de publication :</b> {{ livre.anneePublication }} </p>
                            <h5>Auteur(s) :
                                {% if livre.auteurs is empty %}
                                    <p>Aucun auteur trouvé.</p>
                                {% else %}
                                    {% for auteurs in livre.auteurs %}
                                        <p>{{ auteurs.nom }}</p>
                                    {% endfor %}
                                {% endif %}
                            </h5>
                            <p>État : {{ livre.etatsLivres.libelle }}</p>
                            {# {% if livre.emprunts is not empty %}
                                {% for emprunt in livre.emprunts %}
                                    <p>Emprunté le : {{ emprunt.dateDemande|date('Y-m-d') }}</p>
                                    <p>Restitution prévue
                                        : {{ emprunt.dateRestitutionPrevisionnelle|date('Y-m-d') }}</p>
                                    <button type="button" class="btn btn-danger"
                                            onclick="location.href='/livres/restituer/{{ livre.id }}'">Restituer
                                    </button>
                                    {% if not emprunt.restitue %}
                                        <a href="{{ path('app_restituer_livre', {'livreId': livre.id}) }}"
                                           class="btn btn-danger">Restituer</a>
                                    {% else %}
                                        <p>Livre déjà restitué.</p>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                <p>Disponible</p>
                                <a href="{{ path('app_emprunts', {'livreId': livre.id}) }}" class="btn btn-success">Emprunter</a>
                            {% endif %} #}
                            {# {% if livre.emprunts is not empty %}
                                {% for emprunt in livre.emprunts %}
                                    <p>Emprunté le : {{ emprunt.dateDemande|date('Y-m-d') }}</p>
                                    <p>Restitution prévue : {{ emprunt.dateRestitutionPrevisionnelle|date('Y-m-d') }}</p>

                                    {% if not emprunt.restitue %}
                                        <!-- Affiche le bouton pour restituer si le livre n'a pas encore été restitué -->
                                        <a href="{{ path('app_restituer_livre', {'livreId': livre.id}) }}" class="btn btn-danger">
                                            Restituer
                                        </a>
