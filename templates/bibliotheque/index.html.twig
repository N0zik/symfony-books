{% extends 'base.html.twig' %}

{% block title %}Symfony Book{% endblock %}

{% block body %}
    <h1>Bibliotheque</h1>
    <nav>
        <ul>
            {# <li><a href="{{ path('app_livres_index') }}">Livres</a></li> #}
            {# <li><a href="{{ path('app_auteurs_index') }}">Auteurs</a></li> #}
            {# <li><a href="{{ path('app_emprunts_index') }}">Emprunts</a></li> #}
           

            
        </ul>
    </nav>
    <div class="container"> 
        {# modal #}
        {% for livre in livres %}
       
        <div class="modal fade" id="staticBackdrop{{ livre.id }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">{{ livre.nom }}</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <img src="{{ vich_uploader_asset(livre, 'imageFile') }}" class="img-fluid rounded-start" alt="{{ livre.nom }}">
                        {# info sur le livre #}
                        <h5>résumer :</h5>
                        <p>{{ livre.resume }}</p>
                        <p> <h5>Année de publication :</h5> {{ livre.anneePublication }} </p>
                        {# auteurs #}
                        <h5>Auteur(s) : 
                            {% if livre.auteurs is empty %}
                                <p>Aucun auteur trouvé.</p>
                            {% else %}
                                {% for auteurs in livre.auteurs %}
                                    <p>{{ auteurs.nom }}</p>
                                {% endfor %}
                            {% endif %}
                        </h5> 
                        <p>État : {{ livre.etatsLivres.libelle }}</p> 

                        {# Emprunt #}

                        {% if livre.emprunts is not empty %}
                            {% for emprunt in livre.emprunts %}
                                <p>Emprunté le : {{ emprunt.dateDemande|date('Y-m-d') }}</p>
                                <p>Restitution prévue : {{ emprunt.dateRestitutionPrevisionnelle|date('Y-m-d') }}</p>
                                {% if not emprunt.restitue %}
                                    <a href="{{ path('app_restituer_livre', {'livreId': livre.id}) }}" class="btn btn-danger">Restituer</a>
                                {% else %}
                                    <p>Livre déjà restitué.</p>
                                {% endif %}
                            {% endfor %}
                        {% else %}
                            <p>Disponible</p>
                            <a href="{{ path('app_emprunts', {'livreId': livre.id}) }}" class="btn btn-success">Emprunter</a>
                        {% endif %}
                            
                        {#ajouter un commentaire#}
                <form action="{{ path('app_commentaire_emprunt', {'livreId': livre.id}) }}" method="post">
                    <button type="submit" class="btn btn-primary mt-3">Ajout Commentaire</button>
                </form>
    
                        {# Affichage des Commentaires #}
                        <h5>Commentaires :</h5>
                        {% if livre.commentaires is empty %}
                            <p>Aucun commentaire trouvé.</p>
                        {% else %}
                            {% for commentaire in livre.commentaires %}
                                <p>{{ commentaire.commentaire }}</p>
                                <p>{{ commentaire.note }}</p>
                            {% endfor %}
                        {% endif %}

                            
                        
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    </div>
                </div>
            </div>
        </div>
    </div> 
    {% endfor %}
    {# fin modal #}
    <a href="{{ path('app_en_retard') }}" class="btn btn-warning">Afficher les livres en retard</a>
    {# tous les livres #}
    {% for livre in livres %}

    <div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{ vich_uploader_asset(livre, 'imageFile') }}" class="img-fluid rounded-start" alt="{{ livre.nom }}">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">

                            {# titre #}

                            <h5 class="card-title">{{ livre.nom }}</h5>

                            {# auteur #}
                             <h6>Auteur :</h6>
                                    {% if livre.auteurs is empty %}
                                            <p>Aucun auteur trouvé.</p>
                                        {% else %}
                                            {% for auteurs in livre.auteurs %}
                                                <p>{{ auteurs.nom }}</p>
                                            {% endfor %}
                                        {% endif %}

                            {# date de publication #}
                            <p>Date de publication : {{ livre.anneePublication }}</p>

                                {# etat des livres #}
                                {% if etatsLivres is defined %}
                                        <p>État : {{ livre.etatsLivres.libelle }}</p>
                                    {% else %}
                                        <p>État du livre non défini</p>
                                {% endif %}

                            {# emprunts #}
                        {% if livre.emprunts is not empty %}
                            {% for emprunt in livre.emprunts %}
                                    <p>Emprunté le : {{ emprunt.dateDemande|date('Y-m-d') }}</p>
                                    <p>Restitution prévue : {{ emprunt.dateRestitutionPrevisionnelle|date('Y-m-d') }}</p>
                                    <a href="{{ path('app_restituer_livre', {'livreId': livre.id}) }}" class="btn btn-danger">+Restituer</a>
                            {% endfor %}
                        {% else %}
                                <p>Disponible</p>
                                <a href="{{ path('app_emprunts', {'livreId': livre.id}) }}" class="btn btn-success">Emprunter</a>                        
                        {% endif %}
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop{{ livre.id }}">voir plus</button>  

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>  
    </div>     
   {% endfor %}
    
    {# {% if livre.disponibilite == true %} #}
   
</div>
{% endblock %}
