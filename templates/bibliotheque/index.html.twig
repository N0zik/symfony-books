{% extends 'base.html.twig' %}

{% block title %}Symfony Book{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center mb-5">Bibliothèque</h1>
    <nav>
        <ul>
            {% include "components/_search.html.twig" with { form:form ?? null } only %}
        </ul>
    </nav>
    <div class="container">
        {# Bouton pour afficher les livres non restitués #}
        <a href="{{ path('app_en_retard') }}" class="btn btn-primary">Livres non restitués</a>
        {# modal #}
        {% for livre in livres %}

            <div class="modal fade" id="staticBackdrop{{ livre.id }}" data-bs-backdrop="static" data-bs-keyboard="false"
                 tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header ">
                            <h5 class="modal-title" id="staticBackdropLabel">{{ livre.nom }}</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body ">
                            <divb class="d-flex justify-content-center">
                                <img src="{{ vich_uploader_asset(livre, 'imageFile') }}" alt="{{ livre.nom }}"
                                     style="height:450px; object-fit: cover">
                            </divb>

                            <h5 class="mt-5 mb-5">Résumer :</h5>
                            <p>{{ livre.resume }}</p>
                            <p><b>Année de publication :</b> {{ livre.anneePublication }} </p>
                            <h5>Auteur(s) :
                                {% if livre.auteurs is empty %}
                                    <p>Aucun auteur trouvé.</p>
                                {% else %}
                                    {% for auteurs in livre.auteurs %}
                                        <p>{{ auteurs.nom }}</p>
                                    {% endfor %}
                                {% endif %}
                            </h5>
                            <p>État : {{ livre.etatsLivres.libelle }}</p>

                           {# Affichage des emprunts et de l'option pour restituer #}
                            {% if livre.emprunts is not empty %}
                                {% for emprunt in livre.emprunts %}
                                    <p>Emprunté le : {{ emprunt.dateDemande|date('Y-m-d') }}</p>
                                    <p>Restitution prévue : {{ emprunt.dateRestitutionPrevisionnelle|date('Y-m-d') }}</p>
                                    {# Si le livre n'est pas encore restitué, afficher le bouton de restitution #}
                                    {% if not emprunt.dateRestitutionEffective %}
                                        <form method="post" action="{{ path('app_restituer', {'empruntId': emprunt.id}) }}">
                                            <button type="submit" class="btn btn-danger">Restituer</button>
                                        </form>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}

                            {# Option pour emprunter un livre #}
                            {% if livre.disponibilite %}
                                <a href="{{ path('app_emprunts', {'livreId': livre.id}) }}" class="btn btn-success">Emprunter</a>
                                <p>{{ livre.nom }} est disponible pour le moment.</p>
                            {% else %}
                                <p>{{ livre.nom }} n'est pas disponible pour l'emprunt.</p>
                            {% endif %}
                            {# ajouter un commentaire #}
                            <form action="{{ path('app_commentaire_emprunt', {'livreId': livre.id}) }}" method="post">
                                <button type="submit" class="btn btn-primary mt-3">Ajout Commentaire</button>
                            </form>

                            {# Affichage des Commentaires #}
                            <h5>Commentaires :</h5>
                            {% if livre.commentaires is empty %}
                                <p>Aucun commentaire trouvé.</p>
                            {% else %}
                                {% for commentaire in livre.commentaires %}
                                    <h6>{{ commentaire.utilisateurs.nom }}</h6>
                                    <p>{{ commentaire.commentaire }} {{ commentaire.dateAjout|date('Y-m-d') }}</p>
                                {% endfor %}
                            {% endif %}
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

        {# tous les livres #}
        <div class="container mt-5">
            <div class="row row-cols-1 row-cols-md-3 g-4">
                {% for livre in livres %}
                    <div class="col">
                        <div class="card h-100">
                            <img src="{{ vich_uploader_asset(livre, 'imageFile') }}" class="card-img-top "
                                 style="height:300px; object-fit: cover" alt="{{ livre.nom }}">
                            <div class="card-body ">
                                <h5 class="card-title mb-5 d-flex justify-content-center">{{ livre.nom }}</h5>
                                <p class="card-text d-flex justify-content-center">
                                    {% if livre.auteurs is empty %}
                                        Aucun auteur trouvé.
                                    {% else %}
                                        {% for auteur in livre.auteurs %}
                                            <h6 class="card-subtitle mb-2 text-muted ">Auteur: {{ auteur.nom }}</h6>
                                            {% if not loop.last %}, {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                </p>
                                <p class="card-text">Date de publication : {{ livre.anneePublication }}</p>

                                {# emprunt #}

                                {% if livre.emprunts is not empty %}
                                    {% for emprunt in livre.emprunts %}
                                        <p>Emprunté le : {{ emprunt.dateDemande|date('Y-m-d') }}</p>
                                        <p>Restitution prévue : {{ emprunt.dateRestitutionPrevisionnelle|date('Y-m-d') }}</p>
                                    
                                        {% if not emprunt.dateRestitutionEffective %}
                                            <form method="post" action="{{ path('app_restituer', {'empruntId': emprunt.id}) }}">
                                                <button type="submit" class="btn btn-danger">Restituer</button>
                                            </form>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}

                                {# Option pour emprunter un livre #}

                                {% if livre.disponibilite %}
                                    <a href="{{ path('app_emprunts', {'livreId': livre.id}) }}" class="btn btn-success">Emprunter</a>
                                    <button type="button" class="btn btn-primary " data-bs-toggle="modal"
                                            data-bs-target="#staticBackdrop{{ livre.id }}">voir plus
                                    </button>
                                    <p>{{ livre.nom }} est disponible pour le moment.</p>
                                {% else %}
                                        <button type="button" class="btn btn-primary " data-bs-toggle="modal"
                                         data-bs-target="#staticBackdrop{{ livre.id }}">voir plus
                                        </button>
                                    <p>{{ livre.nom }} n'est pas disponible pour l'emprunt.</p>
                                {% endif %}
                                    
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        {# {% if livre.disponibilite == true %} #}

    </div>
{% endblock %}

