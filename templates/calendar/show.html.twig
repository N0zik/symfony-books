{% extends 'base.html.twig' %}

{% block title %}Calendar{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Calendar</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th >Id</th>
                    <td>{{ calendar.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ calendar.title }}</td>
                </tr>
                <tr>
                    <th>Date début</th>
                    <td>{{ calendar.start|date('d/m/Y h:m') }}</td>
                </tr>
                <tr>
                    <th>Date fin</th>
                    <td>{{ calendar.end|date('d/m/Y h:m') }}</td>
                <tr>
                    <th>Description</th>
                    <td>{{ calendar.description }}</td>
                </tr>
                <tr>
                    <th>Chaque jour</th>
                    <td>{{ calendar.allDay ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Background color</th>
                    <td>{{ calendar.backgroundColor }}</td>
                </tr>
                <tr>
                    <th>Text color</th>
                    <td>{{ calendar.textColor }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_calendar_index') }}" class="btn btn-success btn-lg btn-block">Retourner à vos réservations</a>
        <br><br>
        {{ include('calendar/_delete_form.html.twig') }}
    </div>
{% endblock %}
